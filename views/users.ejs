<%- include('header') %>
<%- include('navbar') %>
<div class="d-flex justify-content-center">
<table data-toggle="table" data-search="true" data-pagination="true" class="table table-striped table-borderless w-100">
    <thead>
      <tr>
        <th data-sortable="true" scope="col">Email</th>
        <th data-sortable="true" scope="col">Nombre</th>
        <th data-sortable="true" scope="col">Apellido</th>
        <th data-sortable="true" scope="col">Grupo</th>
        <th data-sortable="true" scope="col">Rol</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach(function(user) { %>
        <tr>
          <td><%= user.email %></td>
          <td><%= user.nombre %></td>
          <td><%= user.apellido %></td>
          <td><%= user.grupo %></td>
          <td><%= user.rol %></td>
          <td>
            <a href="/auth/delete/<%= user.email %>">Borrar</a>
            <a href="/auth/reset-password/<%= user.email %>">Reset Password</a>
          </td>
        </tr>
      <% }); %>
  </table>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-md-6 offset-md-3">
        <div class="card">
          <div class="card-header">
            <h3>Nuevo Usuario</h3>
          </div>
          <div class="card-body">
            <form action="/auth/register" method="post">
              <div class="form-group">
                <label for="username">Email</label>
                <input type="text" class="form-control" id="email" name="email" placeholder="email">
              </div>
              <div class="form-group">
                  <label for="username">Nombre</label>
                  <input type="text" class="form-control" id="nombre" name="nombre" placeholder="nombre">
              </div>  
              <div class="form-group">
                  <label for="username">Apellido</label>
                  <input type="text" class="form-control" id="apellido" name="apellido" placeholder="apellido">
              </div>  
              <div class="form-group">
                  <label for="username">Grupo</label>
                  <input type="text" class="form-control" id="grupo" name="grupo" placeholder="grupo">
              </div>  
              <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="Password">
              </div>
              <button type="submit" class="btn btn-primary">Register</button>
              </form>
          </div>
      </div>
  </div>
</span>
<%- include('footer') %>